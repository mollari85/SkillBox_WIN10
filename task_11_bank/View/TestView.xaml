<Window x:Class="task_11_bank.View.TestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task_11_bank.View"
        mc:Ignorable="d"
        Title="TestView" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="205,176,0,0" TextWrapping="Wrap" Text="{Binding Path=Name, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="205,217,0,0" TextWrapping="Wrap" Text="{Binding Path=Age, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="447,135,0,0" TextWrapping="Wrap" Text="{Binding Path=Age, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="447,167,0,0" TextWrapping="Wrap" Text="{Binding Path=Age, UpdateSourceTrigger=Explicit}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
